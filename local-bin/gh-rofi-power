#!/usr/bin/env bash

# Rofi Power Menu
# Simple script to manage system power via Rofi
# Uses composable system power scripts

# Main menu
main() {
    local options="Power Off\nReboot\nSuspend\nLogout"

    # Show Rofi menu
    local chosen=$(echo -e "$options" | rofi -dmenu -p "Power" -theme custom)

    # Handle selection
    case "$chosen" in
        "Power Off")
            gh-system-poweroff
            ;;
        "Reboot")
            gh-system-reboot
            ;;
        "Suspend")
            gh-system-suspend
            ;;
        "Logout")
            gh-system-logout
            ;;
    esac
}

main
